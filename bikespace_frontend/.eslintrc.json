{
  "extends": "./node_modules/gts/",
  "env": {
    "jest": true
  },
  "plugins": ["unused-imports"],
  "overrides": [
    {
      "files": ["src/**/*.[jt]s?(x)"],
      "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "unused-imports/no-unused-imports": "error",
        "unused-imports/no-unused-vars": ["warn", {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }]
      }
    },
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "rules": {
        "node/no-unpublished-import": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ],
  "ignorePatterns": [
    "jest.config.js",
    "jest-preprocess.js",
    "loadershim.js",
    "setup-jest.js",
    "**/__mocks__/**/*"
  ]
}
